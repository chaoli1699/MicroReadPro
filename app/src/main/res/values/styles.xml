<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/mdColor_pink_accent</item>
    </style>

    <style name="AppTheme.NoBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">

        <!-- textColor 定义标题文字的颜色 -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- menu字体颜色-->
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- 溢出菜单图标颜色-->
        <item name="colorControlNormal">@color/white</item>
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/Overflow_Menu_Text_style</item>
        <!-- 左边箭头 -->
        <item name="drawerArrowStyle">@style/left_Drawer_Arrow_Style</item>
        <!-- 菜单项点击selector-->
        <item name="actionBarItemBackground">@drawable/abc_item_background_holo_dark</item>

    </style>

    <!-- 左边的箭头指示-->
    <style name="left_Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <!--溢出菜单文字样式-->
    <style name="Overflow_Menu_Text_style" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/mdColor_black_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- expandedTitleTextAppearance Title -->
    <style name="expandedTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- collapsedTitleTextAppearance Title -->
    <style name="collapsedTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--启动界面样式-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyOverflowText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#f3672b</item>
    </style>

    <style name="MyErrorStyle">
        <item name="android:textColor">#ec4722</item>
    </style>



</resources>
