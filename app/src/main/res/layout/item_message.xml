<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_message_container">

    <ImageView
        android:id="@+id/item_message_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/default_head"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/item_message_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_message_head"
        android:layout_alignBaseline="@id/item_message_head"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/text_subhead"
        android:textColor="@color/mdColor_blue_accent"/>

    <TextView
        android:id="@+id/item_message_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_message_username"
        android:layout_alignLeft="@id/item_message_username"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/text_body"
        android:textColor="@color/mdColor_grey_dark"/>

    <TextView
        android:id="@+id/item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_message_comment"
        android:layout_alignBaseline="@id/item_message_comment"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/mdColor_grey"/>

    <TextView
        android:id="@+id/item_message_readOrNo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_subhead"/>

    <TextView
        android:id="@+id/item_message_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mdColor_grey_light"/>

</RelativeLayout>