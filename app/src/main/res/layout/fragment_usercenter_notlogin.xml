<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_for_c_u"/>

    <ImageView
        android:id="@+id/fg_usercenter_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/warn_md"/>

    <TextView
        android:id="@+id/fg_usercenter_tologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fg_usercenter_warn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/notlogin_clickto"
        android:textSize="15sp"
        android:textColor="@color/mdColor_blue"/>

</RelativeLayout>